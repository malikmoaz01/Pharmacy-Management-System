        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>RegistrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddMedicineServlet</servlet-name>
        <servlet-class>AddMedicineServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddMedicineServlet</servlet-name>
        <url-pattern>/addMedicine</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SearchMedicineServlet</servlet-name>
        <servlet-class>SearchMedicineServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchMedicineServlet</servlet-name>
        <url-pattern>/searchMedicine</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateMedicineServlet</servlet-name>
        <servlet-class>UpdateMedicineServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateMedicineServlet</servlet-name>
        <url-pattern>/updateMedicine</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteMedicineServlet</servlet-name>
        <servlet-class>DeleteMedicineServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteMedicineServlet</servlet-name>
        <url-pattern>/deleteMedicine</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DisplayMedicinesServlet</servlet-name>
        <servlet-class>DisplayMedicinesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DisplayMedicinesServlet</servlet-name>
        <url-pattern>/displayMedicines</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddToCartServlet</servlet-name>
        <servlet-class>AddToCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddToCartServlet</servlet-name>
        <url-pattern>/addToCart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DisplayCartServlet</servlet-name>
        <servlet-class>DisplayCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DisplayCartServlet</servlet-name>
        <url-pattern>/displayCart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PlaceOrderServlet</servlet-name>
        <servlet-class>PlaceOrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PlaceOrderServlet</servlet-name>
        <url-pattern>/placeOrder</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DisplayOrdersServlet</servlet-name>
        <servlet-class>DisplayOrdersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DisplayOrdersServlet</servlet-name>
        <url-pattern>/displayOrders</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

</web-app>
